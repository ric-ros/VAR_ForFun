@page "/counter"

<PageTitle>Contatore</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Contatore</MudText>
<MudText Class="mb-4">Non so perché ma hai premuto: @currentCount</MudText>
<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="IncrementCount">Premi</MudButton>


@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
